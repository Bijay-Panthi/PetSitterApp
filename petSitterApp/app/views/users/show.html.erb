<%= image_tag( @user.image ) %>
<ul>
  <li>name: <%= @user.name %></li>
  <li>Location: <%= @user.location %></li>
  <li>Email: <%= @user.email %></li>
  <ul>
    <% @user.services.each do |service| %>
      <div>

        <%= link_to(image_tag(service.name), "/services/#{service.id}") %>
        <%= link_to 'Edit', edit_service_path(service) %>
      </div>
      <div>
        <%=  %>

      </div>
    <% end %>
  </ul>
</ul>
<div class="container" width: 40%;>

<div class="row center">
    <!-- RATING VOTE  -->
  <%= link_to like_user_path(@user), method: :put do %>
  Upvote
  <%= @user.get_upvotes.size %>
<% end %>

<%= link_to dislike_user_path(@user), method: :put do %>
  Downvote
  <%= @user.get_downvotes.size %>
<% end %>

<h2> Pets List </h2>

  <% @user.pets.each do |pet| %>
    <div class="listImage" >
      <%= link_to(image_tag(pet.image), "/pets/#{pet.id}") %>
      <%= link_to 'Destroy', pet_path(pet),
              method: :delete,
              data: { confirm: 'Are you sure?' }  %>
    </div>
  <% end %>

    </div>
</div>
